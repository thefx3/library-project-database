<head>
    <title>Update</title>
    <link rel="stylesheet" href="/root.css">
    <link rel="stylesheet" href="/update.css">
  </head>
  <body>
    <%- include("partials/header") %>
  
    <div class="update-form">
      <div class="update-header">
        <h1 class="update-category">Update</h1>
        <a href="/categories/add" class="add-btn">+ Add category</a>
      </div>
  
      <div class="update-list">
          
        <% categories.forEach(cat => { %>
          <div class="category-item">
            <span><%= cat.category %></span>
            <div class="actions">
              <!-- <a href="/categories/edit/<%= cat.id %>" class="edit-btn">Edit</a> -->
              <form action="/categories/delete/<%= cat.id %>" method="POST" class="delete-form">
                <button type="submit" class="delete-btn">Delete</button>
              </form>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </body>
  